{% extends 'admin/administration.html.twig' %}

{% block title %}Connexion administrateur
{% endblock %}

{% block principal %}
	<div class='col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-xl-4 offset-xl-4'>
		<div class='row p-2'>
			<div class='col-12'>
				<section class='row card bg-secondary'>

					<div class='card-header'>
						<h4 class='col-12 text-center text-warning'>Connexion</h4>
					</div>

					<div class='list-group list-group-flush'>
						<form class='list-group-item list-group-item-secondary' method='post'>
							<table class='col-12'>

								<tr>
									<td>
										Admin :
									</td>
									<td class='d-flex flex-column'>
										<input type='text' name='admin'/>
									</td>
								</tr>

								<tr>
									<td>
										Mot de passe :
									</td>
									<td class='d-flex flex-column'>
										<input type='password' name='password'/>
									</td>
								</tr>

								<tr>
									<td colspan='2'>
										<div class='d-flex justify-content-end'>
											<input class='btn btn-secondary text-warning' type='submit' value='Connexion'/>
										</div>
									</td>
								</tr>

							</table>
						</form>
					</div>

				</section>
			</div>
		</div>
	</div>
{% endblock %}
